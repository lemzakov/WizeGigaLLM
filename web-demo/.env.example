# Environment Variables Configuration
# Copy this file to .env.local and fill in your actual credentials

# GigaChat API Credentials
# Get your credentials from: https://developers.sber.ru/docs/ru/gigachat/individuals-quickstart#shag-2-poluchenie-tokena-dostupa
# You will receive a Client ID (UUID format) and Client Secret (Authorization Key)
GIGACHAT_CLIENT_ID=your_client_id_here
GIGACHAT_CLIENT_SECRET=your_client_secret_here

# GigaChat API Base URL
GIGACHAT_BASE_URL=https://gigachat.devices.sberbank.ru/api/v1

# SSL Certificate Verification
GIGACHAT_VERIFY_SSL_CERTS=false

# Optional: For production, set to true
# GIGACHAT_VERIFY_SSL_CERTS=true
